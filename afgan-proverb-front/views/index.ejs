<%- include('partials/header.ejs') %>

<section class="proverb-section">
  <h1 class="section-title">Afghan Proverbs List</h1>

  <% proverbs.forEach(proverb => { %>
    <div class="proverb-card">
      <p><strong>Dari:</strong> <span><%= proverb.textDari %></span></p>
      <p><strong>Pashto:</strong> <span><%= proverb.textPashto %></span></p>
      <p><strong>English:</strong> <span><%= proverb.translationEn %></span></p>
      <p><strong>Category:</strong> <span><%= proverb.category %></span></p>

      <div class="action-buttons">
        <a href="/edit/<%= proverb.id %>" class="btn btn-sm btn-warning">Edit</a>
        <form action="/delete/<%= proverb.id %>" method="POST" class="d-inline">
          <button class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this proverb?')">Delete</button>
        </form>
      </div>
    </div>
  <% }) %>
</section>


<%- include('partials/footer.ejs') %>